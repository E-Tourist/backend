{
    "linterOptions": {
        "typeCheck": true
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-debugger": false,
        "max-line-length": [
            true,
            300
        ],
        "align": [
            true,
            "statements"
        ],
        "array-type": [
            true,
            "generic"
        ],
        "ban": false,
        "import-spacing": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-classes-per-file": false,
        "member-ordering": [
            {
                "name": "public static field",
                "kinds": [
                    "public-static-field",
                    "protected-static-field"
                ]
            },
            {
                "name": "private static field",
                "kinds": [
                    "private-static-field"
                ]
            },
            {
                "name": "public instance field",
                "kinds": [
                    "public-instance-field",
                    "protected-instance-field"
                ]
            },
            {
                "name": "private instance field",
                "kinds": [
                    "private-instance-field"
                ]
            },
            {
                "name": "public static method",
                "kinds": [
                    "public-static-method",
                    "protected-static-method",
                    "public-static-accessor",
                    "protected-static-accessor"
                ]
            },
            {
                "name": "private static method",
                "kinds": [
                    "private-static-method",
                    "private-static-accessor"
                ]
            },
            {
                "name": "public instance method",
                "kinds": [
                    "public-constructor",
                    "protected-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "public-instance-accessor",
                    "protected-instance-accessor"
                ]
            },
            {
                "name": "private instance method",
                "kinds": [
                    "private-constructor",
                    "private-instance-method",
                    "private-instance-accessor"
                ]
            }
        ],
        "no-any": false,
        "no-console": [
            true,
            "log",
            "info",
            "debug",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-constructor-vars": false,
        "no-default-export": true,
        "no-duplicate-variable": true,
        "no-inferrable-types": false,
        "no-require-imports": true,
        "no-var-requires": true,
        "prefer-const": [
            true,
            {
                "destructuring": "all"
            }
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "switch-default": false,
        "trailing-comma": {
            "multiline": "never",
            "singleline": "never"
        },
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ],
        "interface-over-type-literal": false
    },
    "rulesDirectory": []
}